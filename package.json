{
  "name": "sistema-construccion",
  "version": "0.1.0",
  "description": "Sistema Integral de Gestión de Construcción - Monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:cov": "turbo run test:cov",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "clean": "turbo run clean",
    "infra:up": "docker-compose -f infra/docker/docker-compose.yml up -d",
    "infra:down": "docker-compose -f infra/docker/docker-compose.yml down",
    "infra:logs": "docker-compose -f infra/docker/docker-compose.yml logs -f",
    "infra:reset": "docker-compose -f infra/docker/docker-compose.yml down -v && docker-compose -f infra/docker/docker-compose.yml up -d"
  },
  "devDependencies": {
    "turbo": "^1.11.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
