# Application
NODE_ENV=development
PORT=3002

# Database PostgreSQL (Auth DB separada)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=construccion_auth
DATABASE_USER=admin
DATABASE_PASSWORD=admin123
DATABASE_SYNCHRONIZE=true
DATABASE_LOGGING=true

# JWT Configuration
JWT_SECRET=your-super-secret-key-change-in-production-use-openssl-rand-base64-32
JWT_ACCESS_TOKEN_EXPIRATION=15m
JWT_REFRESH_TOKEN_EXPIRATION=7d

# Security
BCRYPT_ROUNDS=10
RATE_LIMIT_LOGIN_ATTEMPTS=5
RATE_LIMIT_LOGIN_WINDOW=15m
RATE_LIMIT_REGISTER_ATTEMPTS=3
RATE_LIMIT_REGISTER_WINDOW=1h

# API
API_PREFIX=api/v1
